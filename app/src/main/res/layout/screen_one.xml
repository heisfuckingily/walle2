<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/commonbg1"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <!-- image on the screen -->

    <!-- Title text -->
    <ImageView

        android:layout_width="294dp"
        android:layout_height="199dp"
        android:layout_marginTop="@dimen/content_margin"
        android:src="@drawable/wallelogo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/content_margin"
        android:fontFamily="sans-serif-black"
        android:text="Welcome to Wall-E Control Panel"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

    <!-- Desc text -->
    <TextView
        android:layout_width="365dp"
        android:layout_height="97dp"
        android:layout_marginTop="@dimen/content_margin"
        android:fontFamily="sans-serif-black"
        android:text="You can use this application on your mobile to control the robot in real time! Click next for more tips."
        android:textAlignment="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
        android:textSize="18sp" />

</LinearLayout>